@using Microsoft.AspNetCore.Identity
<html>
    <head>@* Set icon and heading *@
        <title>Campus Feedback: @ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/img/campusFedbackLogo.png">@* Set icon *@
    <link href="~/css/button.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">@* import bootstrap link *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>@* import java script link *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.cdnfonts.com/css/chela-one" rel="stylesheet">

</head>
    <body class="bg-dark text-white">

    <div class="p-2 bg-dark text-white text-center border-bottom border-light align-content-center">
        <div class="container">
            <div class="row">
                <div class="col-3 p-1 justify-content-start">
                    <a asp-controller="App" asp-action="Index">
                    <img src="~/img/image.png" width="120px" />
                    </a>
                </div>
                <div class="col-6 align-content-center pt-2">
                    <h3>Campus Feedback</h3>@* adding name "Campus Feedback " *@

                </div>
                <div class="col-3 pt-2">
                    <button class='glowing-btn' onclick="window.location.href='http://localhost:8888/App/Registration'"><span class='glowing-txt'>F<span class='faulty-letter'>EE</span>DBACK</span></button>
                </div>
            </div>
        </div>

    </div>
    @if (User.Identity.IsAuthenticated)@* If admin login then it will logout*@
    {
        <div class="container border-bottom border-light">

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark ">
            @* Adding a navbar*@
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="SurveyResults">Survey Results</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="QuestionList">Question</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="StudentList">Feedbacks</a>
                    </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                </ul>
            </div>
        </nav>

    </div>
    }
    @RenderBody()@*as renderbody will change ->app  *@

        <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>

        <script src="~/js/script.js"></script>@*adding script for jquery and chart *@
       
        <script src="~/lib/fortawesome/fontawesome-free/js/fontawesome.js"></script>
        <script src="~/lib/fortawesome/fontawesome-free/js/solid.js"></script>
        <script src="~/js/index.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>@* adding a script for chart *@
        @RenderSection("scripts", false)
    </body>
</html>