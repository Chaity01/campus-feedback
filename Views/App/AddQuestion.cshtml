@model Question
@{
    ViewBag.Title = "Add Question";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row mt-5">
    <div class="col-md-8 offset-md-2">
        <div class="card card-body bg-dark text-white">
            <form method="post">

                <div asp-validation-summary="ModelOnly "> </div>

                <div class="form-group">
                    <div class="row mt-2">
                        <div class=" col-3">
                            <label asp-for="Title">Title :</label>
                        </div>
                        <div class="col-9">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title"></span>
                        </div>
                    </div>
                </div>


                <div class="form-group mt-5">
                    <div class=" row mt-2">
                        <div class="col-3">
                            <label asp-for="IsShowInHomepage">Show This Question Chart in Homepage? :</label>
                        </div>
                        <div class="col-9">
                            <input class="form-check-input" type="checkbox" asp-for="IsShowInHomepage" />
                            <span asp-validation-for="IsShowInHomepage"></span>
                        </div>
                    </div>
                </div>

                <br />

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <div class="text-success">@ViewBag.UserMessage</div>
                </div>

            </form>
        </div>
    </div>
</div>

