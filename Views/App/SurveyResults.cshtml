@model IEnumerable<Question>
@{
  ViewBag.Title = "Survey Result Page";
}
@section Scripts {
    <script src="~/js/home.js"></script>
}

<div class="container-fluid">
    <div class="container">
        <div class="row mt-5 align-content-center"><h3>Total number of participants <span class="text-primary" id="studentcount"></span> </h3></div>
        <div class="row mt-5">
            @foreach (var p in Model)
            {
                <div class="col-md-6 mt-3">
                    <h4 class="title">@(p.Title)</h4>
                    <canvas id="@(p.Id)" style="width:100%;max-width:400px"></canvas>
                </div>
            }
        </div>
    </div>
</div>

